<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textNotifi"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/main02"
        android:contentDescription="center"
        android:textAlignment="center"
        android:textSize="15sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnMyroom"
        android:layout_width="119dp"
        android:layout_height="130dp"
        android:layout_below="@+id/textNotifi"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main09"
        android:onClick="onBtnMyroomClicked" />

    <Button
        android:id="@+id/btnMakeNew"
        android:layout_width="119dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textNotifi"
        android:background="@drawable/main10"
        android:onClick="onBtnMakeNewClicked" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="119dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textNotifi"
        android:background="@drawable/main08"
        android:onClick="onBtnSearchClicked" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:visibility="visible"
        android:src="@drawable/main01" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_list_view"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical" />

</RelativeLayout>