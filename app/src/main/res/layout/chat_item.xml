<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/main07">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="64dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_departure"
        android:layout_marginStart="76dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="탑승시간"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_departure"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_destination"
        android:layout_marginTop="32dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_destination"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_numOfpeople"
        android:layout_marginEnd="44dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_cash"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_departure"
        android:layout_below="@+id/tv_destination"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:textColor="#bf2424"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_numOfpeople"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_time"
        android:layout_toEndOf="@+id/tv_departure"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="인원"
        android:textSize="13sp" />


</RelativeLayout>